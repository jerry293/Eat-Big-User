        <TextView
            android:id="@+id/cart_productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="11dp"
            android:layout_marginEnd="-5dp"
            android:layout_toRightOf="@+id/cart_productQuantity"

            android:text="Product Price"
            android:textAlignment="center"
            android:textColor="#131212"
            android:textSize="15dp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/cart_Remove"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:textColor="@color/white"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/cart_EditBtn"
            android:background="@drawable/seat_alloted"
            android:text="remove" />




        <Button
            android:id="@+id/cart_EditBtn"
